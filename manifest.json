{
	"name" : "Copy URL to Clipboard",
	"description" : "Copy current page URL to clipboard.",
	"icons" : {
		"128" : "img/icon_128.png"
	},
	"developer" : {
		"name" : "mubaidr",
		"url" : "https://github.com/mubaidr"
	},
	"page_action" : {
		"default_title" : "Copy URL",
		"default_icon" : "img/clone.png"
	},
	"background" : {
		"scripts" : ["js/background.js"],
		"persistent" : false
	},
	"version" : "1.01",
	"manifest_version" : 2,
	"permissions" : ["tabs", "http://*/*", "https://*/*", "clipboardWrite"],
	"offline_enabled" : true
}